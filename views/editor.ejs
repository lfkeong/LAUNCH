	<script type="text/javascript">

		var User = {};
		var myRootRef = new Firebase('https://launchhacky-database.firebaseio.com/');
		myRootRef.on('value', function(data){
			var data = data.val();
			console.log("fetching data from firebase: ", data);
			User = {  //For debugging, used to check on console 
				title : data.title,
				description : data.description,
				feature : data.feature,
				feat_description : data.feat_description
			};
				if(data.title.length != 0){$('#eb-title').text(data.title);}
				if(data.description.length != 0){$('#eb-main-description').text(data.description);}	
				if(data.feature.length != 0){$('#eb-feature').text(data.feature);}
				if(data.feat_description.length != 0){$('#eb-feat-description').text(data.feat_description);}
		});
	</script>

